<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.app.man"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="5dp" >

    <com.app.view.WomanHeadView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android_custom:curTab="rank">
    </com.app.view.WomanHeadView>
    
    <com.app.view.RankScrollView2
        android:id="@+id/rank_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
		    android:paddingBottom="6dp"
		    android:baselineAligned="false" >

            <LinearLayout
                android:id="@+id/rank_first_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="6dp"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rank_second_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
            
        </LinearLayout>
    </com.app.view.RankScrollView2>

    <com.app.view.FootView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android_custom:currentTab="woman"></com.app.view.FootView>

</LinearLayout>