<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_man="http://schemas.android.com/apk/res/com.app.man"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp" >

    <!-- 用户信息 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <!-- 头像 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/man_item_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />

            <TextView
                android:id="@+id/man_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/man_item_head"
                android:text="尹楠"
                android:textColor="#2f2f2f"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/man_item_head"
                android:layout_marginBottom="-3dp"
                android:layout_toRightOf="@id/man_item_head"
                android:text="2013-2-20"
                android:textColor="#b1b1b1"
                android:textSize="12sp" />
        </RelativeLayout>
        <!-- 关注按钮 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/attention_bt"
            android:drawablePadding="3dp"
            android:text="@string/attention_txt"
            android:textColor="#b1b1b1"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- 图片展示 -->

    <com.app.view.InnerScrollView
        android:id="@+id/man_item_imgs_scroll"
        android_man:parentScrollView="@id/man_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.app.view.NetImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl2"
                android_man:cornerRadius="3dp" />

            <com.app.view.NetImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl2"
                android_man:cornerRadius="3dp" />

            <com.app.view.NetImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl2"
                android_man:cornerRadius="3dp" />

            <com.app.view.NetImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl2"
                android_man:cornerRadius="3dp" />

            <com.app.view.NetImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl2"
                android_man:cornerRadius="3dp" />
            <com.app.view.NetImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/girl2"
                android_man:cornerRadius="3dp" />
        </LinearLayout>
    </com.app.view.InnerScrollView>

    <!-- 文本内容 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:text="支付宝（alipay）最初作为淘宝网公司为了解决网络交易安全所设的一个功能，该功能为首先使用的“第三方担保交易模式”，由买家将货款打到支付宝账户，由支付宝向卖家通知发货，买家收到商品确认后指令支付宝将货款放于卖家，至此完成一笔网络交易。"
        android:textColor="#565656"
        android:textSize="12sp" />

</LinearLayout>