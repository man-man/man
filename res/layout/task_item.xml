<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/task_item_bg"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/task_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="上传三张照片"
            android:textSize="16sp" />

        <TextView
       		android:id="@+id/task_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/3"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_item_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:text="上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片上传三张照片"
        android:textColor="#b1b1b1"
        android:textSize="14sp" />

</LinearLayout>