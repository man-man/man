<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/task_item_bg"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="15dp" >

    <!-- 评论赞数 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tree_support_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tree_up_icon" />

        <TextView
            android:id="@+id/tree_info_supportNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:textColor="#565656"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/tree_dissupport_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tree_down_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tree_info_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#565656"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
			
            <!-- 临时名 -->
            <TextView
                android:id="@+id/tree_info_item_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#b1b1b1"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="20dp" />
			
            <!-- 发表日期 -->
            <TextView
                android:id="@+id/tree_info_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-3-1"
                android:textColor="#b1b1b1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>