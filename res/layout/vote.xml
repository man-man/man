<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.app.man"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="5dp" >

    <com.app.view.WomanHeadView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android_custom:curTab="vote">
    </com.app.view.WomanHeadView>
    
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2">
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="评选"
	        android:textSize="20sp" />
	</LinearLayout>

    <com.app.view.FootView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android_custom:currentTab="woman"></com.app.view.FootView>

</LinearLayout>